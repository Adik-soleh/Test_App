<div class="container mt-4">
    <h1>Edit Kabupaten</h1>
    <form method="POST" action="/edit-kabupaten/{{kabupaten.id}}" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="nama" class="form-label">Kabupaten Name</label>
            <input type="text" class="form-control" id="nama" name="nama" value="{{kabupaten.nama}}">
        </div>
        <div class="mb-3">
            <label for="provinsi_id" class="form-label">Province</label>
            <select class="form-control" id="provinsi_id" name="provinsi_id" >
                {{#each profinsi}}
                <option value="{{this.id}}">{{this.nama}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label for="diresmikan" class="form-label">Date Established</label>
            <input type="date" class="form-control" id="diresmikan" name="diresmikan" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Path</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*">
        </div>
        <button type="submit" class="btn btn-primary">Add Kabupaten</button>
    </form>
</div>
